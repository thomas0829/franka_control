<mujoco model="rod_franka">

    <option>
        <flag multiccd="enable" />
    </option>
    <size njmax='1000' nconmax='1000' />

    <include file="basic_scene.xml" />
    <include file="franka_assets/franka_assets.xml" />

    <visual>
        <!-- <global offwidth="2560" offheight="1920" />
        <quality shadowsize="4096" offsamples="8" />
        <map force="0.1" fogend="5" /> -->
        <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0"/>
        <rgba haze="0.15 0.25 0.35 1"/>
        <global azimuth="120" elevation="-20"/>
    </visual>

    <compiler inertiafromgeom='auto' inertiagrouprange='0 5' angle="radian" texturedir="texture"
        meshdir="franka_assets/meshes" />
    <worldbody>

        <!-- Cameras -->
        <camera name="front" fovy="65"
            pos="1.3420383158842424 -0.037408864541261 0.5281817817238226"
            quat="0.60670078 0.37513562 0.37637644 0.5912091" />
        <camera name="left" fovy="65" pos="0.5663422788968194 0.8021645313506761 0.4900356493435141"
            quat="0.05478277 0.06033676 0.56395431 0.82177482" />
        
        <camera name="xx" pos="2.411 0.095 1.310" xyaxes="0.004 1.000 -0.000 -0.454 0.002 0.891"/>


        <!-- Robot -->
        <body pos='0. 0. 0.' euler='0 0 0'>
            <include file="franka_assets/chain_peg.xml" />
        </body>

        <!-- Articulated Object -->
        <body name='articulated_object' pos='0.5 0. 0.01' euler='0 0 -2.3'>
            <body name="hinge_base">
                <geom name="base" class="visual" size="0.10 0.15 0.005" type="box" material="keyboard" />
                <geom class="collision" size="0.10 0.15 0.005" type="box" mass="1."/>
        
                <body name="hinge_lid" pos="0.10 0.0 0.01">
                    <joint axis="0 -1 0" name="articulated_joint" range="1.2 3.14" frictionloss="50." damping="2."/>
                    <geom name="lid" class="visual" pos="0.1  0. 0.0" size="0.10 0.15 0.005" type="box" material="screen" />
                    <geom class="collision" pos="0.1  0. 0.0" size="0.10 0.15 0.005" type="box" mass="0.001"/>
                </body>
            </body>
        </body>

        <!-- franka's reachable workspace -->
        <!-- low: np.array([0.35, -0.38, 0.13, 0.00]),
            high: np.array([0.65, 0.38, 0.8, 0.085]), -->
        <!-- <geom conaffinity="2" contype="2" condim="1" name="reach" pos="0.54 0. 0.215"
        size="0.16 0.25 0.2" type="box" rgba="0 255 0 0.1"/> -->

    </worldbody>

    <asset>
        <texture name="laptop_keyboard" type="2d" height="1" width="1" file="laptop_keyboard.png" />
        <material name='keyboard' texture="laptop_keyboard" texrepeat="1 1"
            texuniform="false" />
            <texture name="laptop_screen" type="2d" height="1" width="1" file="laptop_screen.png" />
            <material name='screen' texture="laptop_screen" texrepeat="1 1"
                texuniform="false" />
    </asset>

    <include file="franka_assets/actuator_position_arm.xml" />
    <!-- <include file="franka_assets/actuator_position.xml" /> -->

</mujoco>